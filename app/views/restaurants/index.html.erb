<h1>All Restaurants</h1>

<ul>
  <% @restaurants.each do |restaurant| %>
    <li class="list-group-item">
      <%= restaurant.name %> | <%= link_to "More info", restaurant_path(restaurant), class: "link-warning" %>
      <%#= link_to "See details", restaurant_path(restaurant), class: "btn btn-warning"%>
    </li>
  <% end %>
</ul>

